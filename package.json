{
  "name": "turtle-video",
  "version": "1.0.0",
  "type": "module",
  "description": "タートルビデオ動画編集",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "typecheck": "tsc --noEmit",
    "preview": "vite preview",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write src/**/*.{ts,tsx}",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "quality:gate": "node scripts/quality-gate.mjs",
    "issue:create": "node scripts/create-github-issue.mjs",
    "skills:sync": "node scripts/sync-skills.mjs",
    "skills:sync:windows": "powershell -ExecutionPolicy Bypass -File ./scripts/sync-skills.ps1",
    "skills:sync:ubuntu": "bash ./scripts/sync-skills.sh",
    "skills:install": "node scripts/install-codex-skill.mjs",
    "skills:install:windows": "powershell -ExecutionPolicy Bypass -File ./scripts/install-codex-skill.ps1",
    "skills:install:ubuntu": "bash ./scripts/install-codex-skill.sh",
    "dev:media:setup": "powershell -ExecutionPolicy Bypass -File ./scripts/dev/setup-media-analysis-env.ps1",
    "dev:media:setup:stt": "powershell -ExecutionPolicy Bypass -File ./scripts/dev/setup-media-analysis-env.ps1 -WithStt",
    "dev:media:setup:stt:models": "powershell -ExecutionPolicy Bypass -File ./scripts/dev/setup-media-analysis-env.ps1 -WithStt -PrefetchSttModels -SttModels tiny,small",
    "dev:media:analyze": "powershell -ExecutionPolicy Bypass -File ./scripts/dev/run-media-analysis.ps1",
    "dev:media:cleanup": "powershell -ExecutionPolicy Bypass -File ./scripts/dev/cleanup-media-analysis-artifacts.ps1 -Mode all",
    "dev:media:cleanup:keep-json": "powershell -ExecutionPolicy Bypass -File ./scripts/dev/cleanup-media-analysis-artifacts.ps1 -Mode keep-json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/safubuki/turtle-video.git"
  },
  "keywords": [],
  "author": "",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/safubuki/turtle-video/issues"
  },
  "homepage": "https://github.com/safubuki/turtle-video#readme",
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "lucide-react": "^0.563.0",
    "mp4-muxer": "^5.2.2",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.23",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "jsdom": "^27.4.0",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "sharp": "^0.34.5",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.18"
  }
}
